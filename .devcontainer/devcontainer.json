{
    "name": "Lerbot-so100",
    "build": {
      "context": "..",
      "dockerfile": "../docker/lerobot-nano-super/Dockerfile"
    },
    "containerEnv": {
      "PYTHONPATH": "/workspaces/lerobot:${PYTHONPATH}",
      "http_proxy": "${localEnv:http_proxy}",
      "https_proxy": "${localEnv:https_proxy}",
      "no_proxy": "${localEnv:no_proxy}"
    },
    "runArgs": [
      "--env-file=.devcontainer/devcontainer.env",
      "--runtime=nvidia",
      "-it",
      "--device=/dev/ttyACM_follower:/dev/ttyACM_follower",
      "--device=/dev/ttyACM_leader:/dev/ttyACM_leader",
      "--device=/dev/video0:/dev/video0",
      "--device=/dev/video1:/dev/video1",
      "--device=/dev/video2:/dev/video2",
      "--device=/dev/video3:/dev/video3",
      "--network", "host"
    ],
    "customizations": {
      "vscode": {
        "extensions": [
            "ms-python.python",
            "ms-toolsai.jupyter",
            "esbenp.prettier-vscode",
            "GitHub.copilot",
            "ms-toolsai.datawrangler",
            "mhutchie.git-graph",
            "donjayamanne.githistory",
            "ms-toolsai.vscode-jupyter-cell-tags",
            "ms-toolsai.jupyter-renderers",
            "ms-toolsai.vscode-jupyter-slideshow",
            "yzhang.markdown-all-in-one",
            "yzane.markdown-pdf",
            "shd101wyy.markdown-preview-enhanced",
            "bierner.markdown-preview-github-styles",
            "bierner.markdown-mermaid",
            "goessner.mdmath",
            "DavidAnson.vscode-markdownlint",
            "ms-python.vscode-pylance",
            "ms-python.debugpy",
            "redhat.vscode-yaml",
            "ms-python.autopep8",
            "ms-python.black-formatter",
            "ms-python.isort",
            "ms-toolsai.jupyter-keymap",
            "vscode-icons-team.vscode-icons",
            "RSIP-Vision.nvidia-smi-plus"
        ]
      }
    },
  
    "postStartCommand": "chmod 666 /dev/ttyACM_follower && chmod 666 /dev/ttyACM_leader && chmod 666 /dev/video0 && chmod 666 /dev/video1 && chmod 666 /dev/video2 && chmod 666 /dev/video3"
  }